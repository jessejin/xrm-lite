@model IEnumerable<PickListValue>
@{
    ViewBag.Title = "Pick List Value";
}

<h3>Pick List Values</h3>

<h3><a class="btn btn-primary" href="/PickListValue/Create">Create New Pick List Value</a></h3>




@(Html.Grid(Model.OrderBy(x => x.Id))
    .Columns(columns =>
    {
        columns.Add(x => x.Id).Encoded(false)
                    .Sanitized(false)
                    .RenderValueAs(x => Html.ActionLink(x.Id.ToString(), "Read", new { id = x.Id }));
        columns.Add(x => x.ModelType);
        columns.Add(x => x.FieldName);
        columns.Add(x => x.Values);
    })
    .WithPaging(20)
    .Sortable()
    .Filterable()
    .WithMultipleFilters()
)
