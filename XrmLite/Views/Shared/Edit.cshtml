@model BaseModel
@{
    ViewBag.Title = "Edit " + Model.ModelDisplayName;
}
<br/>

<div class="well">
    <form class="form-horizontal"  method="post">
        <div class="form-group xrm-header">
            <div class="col-sm-2 xrm-header-label" style="">Edit @Model.ModelDisplayName</div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary">Save</button>
                @Html.ActionLink("Cancel", "Read", new { Id = Model.Id }, new { @class = "btn btn-primary" })
            </div>
        </div>

        @Html.EditorForModel()
    </form>
</div>