@model Contact
@{
    ViewBag.Title = "Create Contact";
}

<br />

<div class="well">
    <form class="form-horizontal" method="post">
        <div class="form-group xrm-header">
            <div class="col-sm-2 xrm-header-label">Create Contact</div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-primary" href="/Home">Cancel</a>
            </div>
        </div>

        <div class="form-group xrm-divider">
            Contact Detail
        </div>

        <div class="form-group xrm-detail">
            @Html.LabelFor(x => x.FirstName, new { @class = "control-label col-sm-2" })
            <div class="col-sm-3 xrm-display">
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
            </div>
            @Html.LabelFor(x => x.LastName, new { @class = "control-label col-sm-2" })
            <div class="col-sm-3 xrm-display">
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group xrm-detail">
            @Html.LabelFor(x => x.Email, new { @class = "control-label col-sm-2" })
            <div class="col-sm-3 xrm-display">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
            @Html.LabelFor(x => x.Phone, new { @class = "control-label col-sm-2" })
            <div class="col-sm-3 xrm-display">
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
            </div>
        </div>


    </form>
</div>