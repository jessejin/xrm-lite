@model Contact
@{
    ViewBag.Title = "Edit Contact";
}
<br/>

<div class="well">
    <form class="form-horizontal"  method="post">
        <div class="form-group xrm-header">
            <div class="col-sm-2 xrm-header-label" style="">Edit Contact</div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-primary" href="/Home/Read/@Model.Id">Cancel</a>
            </div>
        </div>

        <div class="form-group xrm-divider" >
            Contact Detail
        </div>

        <div class="form-group xrm-detail">
            @Html.EditorFor(x => x.FirstName)
            @Html.EditorFor(x=>x.LastName)

        </div>

        <div class="form-group xrm-detail">
            @Html.EditorFor(x => x.Email)
            @Html.EditorFor(x => x.Phone)
        </div>


        <div class="form-group xrm-detail">
            @Html.EditorFor(x=>x.DateOfBirth)
        </div>


    </form>
</div>