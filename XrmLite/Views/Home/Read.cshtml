@model Contact
@{
    ViewBag.Title = "Contact";
}

<br />

<div class="well" >
    <form class="form-horizontal" >

        <div class="form-group xrm-header" >
            <div class="col-sm-2 xrm-header-label">Contact</div>
            <div class="col-sm-2">
                <a class="btn btn-primary" href="/Home/Edit/@Model.Id" >Edit</a>
                <a class="btn btn-primary" href="/Home">Go Back</a>
            </div>
        </div>

        <div class="form-group xrm-divider" >
            Contact Detail
        </div>

        <div class="form-group xrm-detail">
            @Html.DisplayFor(x => x.Company)
            @Html.DisplayFor(x => x.Title)
        </div>

        <div class="form-group xrm-detail">
            @Html.DisplayFor(x => x.FirstName)
            @Html.DisplayFor(x => x.LastName)
        </div>



        <div class="form-group xrm-detail" >
            @Html.DisplayFor(x => x.Email)
            @Html.DisplayFor(x => x.Phone)
        </div>

        <div class="form-group xrm-detail">
            @Html.DisplayFor(x=>x.DateOfBirth)
        </div>


        <div class="form-group xrm-divider">System Info</div>
        <div class="form-group xrm-detail">
            @Html.DisplayFor(x => x.CreatedBy)
            @Html.DisplayFor(x=>x.CreatedDate)
        </div>
        <div class="form-group xrm-detail">
            @Html.DisplayFor(x => x.LastModifiedBy)
            @Html.DisplayFor(x => x.LastModifiedDate)
        </div>
    </form>
</div>