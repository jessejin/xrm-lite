@model XrmUser
@{
    ViewBag.Title = "Edit " + Model.ModelDisplayName;
}
<br/>

<div class="well">
    <form class="form-horizontal"  method="post">
        <div class="form-group xrm-header">
            <div class="col-sm-2 xrm-header-label" style="">Edit @Model.ModelDisplayName</div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-primary" href="/@Html.Controller()/ReadGuid/@Model.Id">Cancel</a>
            </div>
        </div>

        @Html.EditorForModel()
    </form>
</div>